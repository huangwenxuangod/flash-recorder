{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flash Recorder",
  "version": "0.1.0",
  "identifier": "com.flashrecorder.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Flash Recorder",
        "width": 360,
        "height": 680
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["D:/recordings/**", "D:/Recordings/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/icon.ico"],
    "resources": ["ffmpeg/*"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "both",
        "installerHooks": "./windows/hooks.nsh"
      },
      "wix": {
        "language": ["zh-CN"],
        "fragmentPaths": ["windows/fragments/shortcuts.wxs"],
        "componentRefs": ["AppDesktopShortcut", "AppStartMenuShortcut"]
      }
    }
  }
}
