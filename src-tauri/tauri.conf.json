{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flash Recorder",
  "version": "0.1.0",
  "identifier": "com.flashrecorder.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Flash Recorder",
        "width": 360,
        "height": 680
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/icon.ico"],
    "resources": ["ffmpeg/*"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "both",
        "installerHooks": "./windows/hooks.nsh"
      },
      "wix": {
        "upgradeCode": "f2d9b6e5-2d0f-4f7b-a0b6-1b1db3f0b2c1",
        "language": ["zh-CN"],
        "fragmentPaths": ["windows/fragments/shortcuts.wxs"],
        "componentRefs": ["AppDesktopShortcut", "AppStartMenuShortcut"]
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY5MTg1NEREN0NDMUFGQjQKUldTMHI4RjgzVlFZK1RWb1U4bDNNamswbEZmWTBHbm9Ec0ZTSm0vd21DNVZkNjVkZGY2QWgxSUkK",
      "endpoints": [
        "https://github.com/huangwenxuangod/flash-recorder/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
